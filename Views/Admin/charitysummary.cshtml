@model forex.Models.directlist;

@{
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="content-wrapper">
    <section class="content">

        <section>
            <h1 class="h1-12"></h1>
            <!--for demo wrap-->
            <div class="tbl-header">
                <div id="name" style="color:red;"></div>
                <table class="table table-responsive-sm" cellpadding="0" cellspacing="0" border="0">
                    <thead class="bg-dark" style=" color:#fff;">
                        <tr>
                            <th>S.no</th>
                            <th>Userid</th>
                            <th>Name</th>
                            <th>Sponsorid</th>
                            <th>mobile</th>
                            <th>Total</th>
                            <th>Capping</th>
                            @*<th>Date</th>*@

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                        }
                        @foreach (var item in Model.directtotal)
                        {
                            i++;
                        <tr>
                            <th class="row-incom">@i</th>
                            <td id="Userid">@item.UserId</td>
                            <td id="amount">@item.Name</td>
                            <td id="transection">@item.Sponsorid</td>
                            <td id="transection">@item.Mobile</td>
                            <td id="transection">@item.TotalBusiness</td>
                            <td id="transection">@item.ranks</td>
                            @*<td id="transection">@item.date</td>*@

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </section>
</div>