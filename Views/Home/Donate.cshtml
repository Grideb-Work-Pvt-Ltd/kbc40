<style>
    body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.275) 100%, yellow 0%, blue 0%), url('../donation.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        height: 100vh;
    }


    .container {
        margin-top: 50px;
    }

    .form-group {
        padding: 15px;
    }

    label {
        padding-bottom: 8px;
    }

    .card-header {
        text-align: center;
        color: white;
        font-weight: bold;
        background-color: #ff8c00bf;
    }

    .btn {
        display: block;
        width: 35%;
        margin: auto;
        background-color: #ff8c00bf;
        font-size: 15px;
        border: none;
        border-radius: 7px;
        font-weight: bold;
    }
</style>


<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Donation Form</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="donate" asp-controller="home" method="post">
                            <div class="">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Name</label>
                                    <input type="text" class="form-control" name="name">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mobile</label>
                                    <input type="number" class="form-control" name="mobile">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Email</label>
                                    <input type="email" class="form-control" name="email">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Pan No</label>
                                    <input type="text" class="form-control" name="pan">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Donation Amount</label>
                                    <input type="number" class="form-control" name="amount">
                                </div>

                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>