                    </div>
                    <div class="small-box" style="background-image: linear-gradient(180deg, #3f3875, #343470, #433e63);">
                        <div class="inner p-4">

                            <h2> @Model.GreenWallet</h2>

                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>

                    </div>
                </div>
                <!-- ./col -->
               

                <!-- ./col -->
            </div>





            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>