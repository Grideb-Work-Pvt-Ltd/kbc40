@model forex.Models.userlistModel
@{
    ViewData["Title"] = "Recipt";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}



<style>

    .table {
        line-height: 0.6 !important;
    }

    .a {
        margin-top: 129px;
        margin-left: 108px;
        font-size: 24px;
    }

    .b {
        margin-top: 142px;
        font-size: 24px;
    }

    .c {
        margin-top: 34px;
        margin-left: 547px;
        font-size: 24px;
    }

    .d {
        margin-top: -52px;
        margin-right: 107px;
        font-size: 24px;
    }
    /*@@media screen and (max-width: 800px)*/
    @@media screen and (min-width: 320px) and (max-width: 768px) {
        .a {
            margin-top: 30px;
            margin-left: 23px;
