<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Withdrawal Summary</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../User/dashboard">Business Panel</a></li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <form>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Total Amount</label>
                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="@Model.tamount" value="@Model.tamount" style="width: 40vh;">
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mt-3">
                    <div class="table-responsive table-rounds">
                        <table id="mytable" class="table table-hover table-striped table-border-whole table-bordered table-responsive-sm">
                            <thead class="table-light-head">
                                <tr class="table-border">
                                    <th scope="col" class="table-border">Index</th>
                                    <th scope="col" class="table-border">Amount</th>
                                    <th scope="col" class="table-border">Transaction Charge</th>
                                    <th scope="col" class="table-border">TDS</th>
                                    <th scope="col" class="table-border">Net Amount</th>
                                    <th scope="col" class="table-border">Date</th>
                                    <th> Status </th>


                                </tr>
                            </thead>
                            <tbody class="table-details">
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model.Incomewall)
                                {
                                    i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td> @item.amount</td>
                                    <td> @item.AdminCharge</td>
                                    <td> @item.TDS</td>
                                    <td> @item.NetAmount</td>
                                    <td>@item.tDate</td>
                                    <td>@item.pstatus</td>
                                </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>





