@model forex.Models.userlistModel
@{
       ViewData["Title"] = "Profile";
       Layout = "~/Views/Shared/_Layoutuser.cshtml";
}
<style>
    .radi
    {
        border-radius:20px;
    }
</style>

        
<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Profile</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="../User/dashboard">Dashboard</a></li>
             
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
 
    <!-- Main content -->
    <section class="content">
    
     <div class="container">
        <div class="row">            
            @*<div class="col-lg-3">  
              	     
            </div>*@
             <div class="col-lg-6">  
                 <h4>@TempData["message"]</h4>
                 <form asp-controller="user" asp-action="pass" method="post" enctype="multipart/form-data">
                     <h3 style="color:red;">@ViewBag.error</h3>
                     <div class="form-group">
                         <label for="formGroupExampleInput">Name</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput" placeholder="Name" name="name" value="@Model.name" readonly>
                     </div>
                     <div class="form-group">
                         <label for="formGroupExampleInput2">Email</label>
                         <input type="email" class="form-control radi" id="formGroupExampleInput2" name="emailaddress" placeholder="Email" value="@Model.emailaddress" readonly>
                     </div>
                     <div class="form-group">
                         <label for="formGroupExampleInput2">Mobile</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="Mobile" placeholder="Mobile" value="@Model.Mobile" readonly>
                     </div>
                     <div class="form-group">
                         <label for="formGroupExampleInput2">nominee</label>
                         <input type="text" class="form-control" id="formGroupExampleInput2" name="nominee" placeholder="nominee" value="@Model.nominee" >
                     </div>
                     <div class="form-group" hidden>
                         <label for="formGroupExampleInput2">User ID</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="userid" placeholder="Code" value="@Model.userid" disabled>
                     </div>
                     <div class="form-group" hidden>
                         <label for="formGroupExampleInput2">Sponsor</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="Sponsorid" placeholder="Sponsor" value="@Model.Sponsorid" disabled>
                     </div>
                     <div class="form-group" hidden>
                         <label for="formGroupExampleInput2">Packege</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="package" placeholder="Packege" value="@Model.package" disabled>
                     </div>
                     <div class="form-group" hidden>
                         <label for="formGroupExampleInput2">D.O.A</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="ActiveDate" placeholder="D.O.A" value="@Model.ActiveDate" disabled>
                     </div>
                     <div class="form-group">
                         <label for="formGroupExampleInput2">Address</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="address" placeholder="Address" value="@Model.address">
                     </div>
                     <div class="form-group">
                         <label for="formGroupExampleInput2">City</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="City" placeholder="city" value="@Model.City">
                     </div>
                     <div class="form-group" hidden>
                         <label for="formGroupExampleInput2">A/C No</label>
                         <input type="text" class="form-control radi" id="formGroupExampleInput2" name="accountno" value="@Model.accountno">
                     </div>
                     <div class="form-group">
                         <label for="formGroupExampleInput2">Image</label>
                         <input type="file" class="form-control" id="formGroupExampleInput2" name="file" required>
                         <img src="@Model.image" style="width:300px" />
                     </div>
                     <div class="form-group">

                         <button type="submit" class="btn btn-primary"> Edit</button>
                     </div>

                 </form>   
            </div>
             @*<div class="col-lg-3">  
              	     
            </div>*@
         </div>
      </div>
   </section> 
</div>
   
        
    
 

    