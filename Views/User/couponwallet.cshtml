@model forex.Models.couponlist
@{
    ViewData["Title"] = "IncomeSummary";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}

<style>
    table.dataTable tbody tr {
        background-color: #217788;
    }

    label {
        color: #fff;
    }

    div#mytable_info {
        color: #fff;
    }

    a#mytable_previous {
        color: #fff !important;
    }

    a#mytable_next {
        color: #fff !important;
    }

    input[type="search"] {
        color: #fff;
    }
</style>


<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Coupon Wallet</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../User/dashboard">Business Panel</a></li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">
       
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mt-3">
                    <div class="table-responsive table-rounds">
                        <table id="mytable" class="table table-hover table-striped table-border-whole table-bordered table-responsive-sm">
                            <thead class="table-light-head">
                                <tr class="table-border">
                                    <th scope="col" class="table-border">Index</th>
                                    <th scope="col" class="table-border">userid</th>
                                    <th scope="col" class="table-border">Couponid</th>
                                    <th scope="col" class="table-border">Detail</th>
                                    <th scope="col" class="table-border">Amount</th>
                                    <th scope="col" class="table-border">Cr/Dr</th>
                                    <th scope="col" class="table-border">Issue date</th>
                                    <th scope="col" class="table-border">Vaild date</th>
                                    <th scope="col" class="table-border">status</th>
                                    <th scope="col" class="table-border">Action</th>
                                    @*<th scope="col" class="table-border">End Date</th>
        <th scope="col" class="table-border">Transfer to</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model.couponslist)
                                {
                                    i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.userid</td>
                                    <td>@item.couponid</td>
                                    <td>@item.createby</td>
                                    <td>@item.couponamount</td>
                                    <td>@item.inout</td>
                                    <td>@item.cdate</td>
                                    <td>@item.edate</td>
                                    <td>@item.statuss</td>
                                    <td>
                                        @if (item.status == "0")
                                        {
                                            <form asp-action="couponTransfer" asp-controller="user">
                                                <input type="text" name="couponid" value="@item.couponid" hidden>
                                                <input type="text" name="userid" value="@item.userid" hidden>
                                                <button type="submit" class="btn btn-info">Transfer</button>
                                            </form>
                                        }

                                    </td>
                                </tr>
                                }
                                <tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>





