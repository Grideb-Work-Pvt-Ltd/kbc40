@{
    ViewData["Title"] = "AddFund";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}


<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">ADD Fund</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../User/dashboard">Dashboard</a></li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">

        <div class="container">
            <div class="row">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-6">


                    <form asp-action="addfundpay" asp-controller="User" method="post">
                        <span id="otpresult" name="otpresult" style="color:red;">@TempData["tp1"]</span>
                        <div class="form-group col-6">
                            <label for="ramount">Add Amount  </label>
                            <input type="number" id="ramount" class="form-control" name="amount">
                        </div>
                        

                        <div class="row">
                            <div class="form-group col-2">
                                <button type="submit"  class=" btn btn-primary"> Submit </button>
                            </div>
                        </div>

                    </form>




                </div>
                <div class="col-lg-3">

                </div>
            </div>
        </div>
    </section>
</div>


