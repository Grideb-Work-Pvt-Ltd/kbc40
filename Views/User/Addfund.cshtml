
@{
    ViewData["Title"] = "AddFund";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}



<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Add Fund</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../User/dashboard">Business Panel</a></li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">



        <style>
            * {
                color: white !important;
            }
        </style>

        <div class="content-wrapper">
            <div class="container-noty pos-noty">
                <form action="">
                    <div class="container row-noty">
                        <div class="col-lg-12">
                            <h1 class="h1-noty" style="text-align: center;">Add Fund</h1>
                            <h1 class="h1-noty" style="text-align: center; color:red;">@ViewBag.data</h1>
                        </div>
                    </div>
                    <hr>
                </form>
            </div>
            <div class="container">
                <form asp-action="Addfund" asp-controller="User" method="post" enctype="multipart/form-data">
                    <div class="row">

                        <div class="col-sm-6 col-md-6 col-lg-6 col-xs-6">

                            <div class="form-group col-6">
                                <h5 for="">INR</h5> <br>
                                <p>....</p>
                            </div>

                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6 col-xs-6">
                            <div class="form-group col-6">
                                <h5 for="">Scan Me</h5> <br>
                                <img class="logo1.png" src="~/boxicons/logo.png" style="width: 200px;" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6 col-xs-6">
                            <div class="form-group col-md-6">
                                <label for="">User Id</label>
                                <input type="text" class="form-control" readonly name="userid" value="@ViewBag.shukla">
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6 col-xs-6">
                            <div class="form-group col-md-6">
                                <label for="">$ Amount</label>
                                <input type="text" class="form-control" name="amount">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group col-md-6">
                                <label for="">Transaction ID</label>
                                <input type="text" class="form-control" name="transection">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="">Image</label>
                            <input type="file" class="form-control" name="file" style="width: 53%;">
                        </div>
                    </div>
                    <div class="text-center" style="margin-left:0px;">
                        <button type="submit" class="btn btn pl-5 pr-5" onclick="myFunction" style="background-image: linear-gradient(150deg, #8e8ebf 80%, #191951);">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <script>
            function myFunction() {
                alert("Are you confirm add amount");
            }
        </script>

    </section>
</div>





