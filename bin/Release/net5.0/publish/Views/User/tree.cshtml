@model forex.Models.treelist
 @{
    ViewData["Title"] = "tree";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}

<style>
    table.dataTable tbody tr {
        background-color: #217788;
    }

    label {
        color: #fff;
    }

    div#mytable_info {
        color: #fff;
    }

    a#mytable_previous {
        color: #fff !important;
    }

    a#mytable_next {
        color: #fff !important;
    }

    input[type="search"] {
        color: #fff;
    }
</style>


<div class="content-wrapper" style="min-height: 333px;">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Upgrade</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../User/dashboard">Dashboard</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">

        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">

                        <form asp-action="tree" asp-controller="user" method="post">
                            <p>Click Me For Upgrade</p>
                            <div class="form-group">
                                <button type="submit" for="exampleFormControlSelect1" style="color: white; background-color: #413d44;">Upgrade:</button>
                            </div>
                        </form>
                        @*<form>
            <div class="form-group">
                <label for="formGroupExampleInput">Total Team</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="" readonly name="amount" value="@Model.totalteam" style="width: 40vh;">
                <label for="formGroupExampleInput">Team Business</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="$" readonly name="amount" value="@Model.TotalBusiness" style="width: 40vh;">

            </div>

        </form>*@
                    </div>
                </div>
            </div>

            <div class="row" hidden>

                <div class="col-lg-12 mt-3">
                    <div class="table-responsive table-rounds">
                        <form asp-action="tree" asp-controller="user" method="post">
                            <div class="form-group text-right">
                                <button type="submit" for="exampleFormControlSelect1" style="color: white; background-color: #413d44;">Upgrade:</button>
                                <select class="form-control-sm" name="level" id="exampleFormControlSelect1" style="width: 205px; height:36px; background: #272672;" hidden>
                                    <option>All</option>
                                    <option value="1">Level 1</option>
                                    <option value="2">Level 2</option>
                                    <option value="3">Level 3</option>
                                    <option value="4">Level 4</option>
                                    <option value="5">Level 5</option>
                                    <option value="6">Level 6</option>
                                    <option value="7">Level 7</option>
                                    <option value="8">Level 8</option>
                                    <option value="9">Level 9</option>
                                    <option value="10">Level 10</option>
                                   
                                </select>
                            </div>
                        </form>
                        <table id="mytable" class="table table-hover table-striped table-border-whole table-bordered table-responsive-sm" hidden>
                            <thead class="table-light-head">
                                <tr class="table-border">
                                    <th scope="col" class="table-border">S.no</th>
                                    <th scope="col" class="table-border">User id</th>
                                    <th scope="col" class="table-border">Name</th>
                                    <th scope="col" class="table-border">Level</th>
                                    <th scope="col" class="table-border">Team Business</th>
                                    <th scope="col" class="table-border">User Packege</th>
                                    <th scope="col" class="table-border">D.O.A</th>
                                    <th scope="col" class="table-border">D.O.J</th>

                                </tr>
                            </thead>
                            <tbody class="table-details">
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model.treelistobj)
                                {
                                    i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.Userid</td>
                                    <td>@item.Name</td>
                                    <td>@item.level</td>
                                    <td>@item.TotalBusiness</td>
                                    <td>@item.Package</td>
                                    <td>@item.ActiveDate</td>
                                    <td>@item.RegDate</td>


                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>





