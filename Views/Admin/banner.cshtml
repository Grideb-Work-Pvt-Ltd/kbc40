@model forex.Models.IncomeWallet;

@{
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}


<div class="content-wrapper">

    <section class="content mt-3 mb-3">


        <form asp-action="Slideimg" asp-controller="admin" method="post" enctype="multipart/form-data">
            <div class="col-md-6 mb-3">

                <div class="form-group">
                    <label>upload image</label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Add New banner</button>
            </div>
        </form>

        <section mt-3>

            <!--for demo wrap-->
            <div class="tbl-header">
                <div id="name" style="color:red;"></div>
                <table class="table table-responsive-sm" cellpadding="0" cellspacing="0" border="0">
                    <thead class="bg-dark" style=" color:#fff;">
                        <tr>

                            <th>Image</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                        }
                        @foreach (var item in Model.Incomewall)
                        {
                            i++;
                            <tr>

                                <td><img src="@item.img" style="width:200px" /></td>
                                <td>
                                    <form asp-action="delimage" asp-controller="admin" method="post" enctype="multipart/form-data">


                                        <input type="text" name="index" value="@item.Index" hidden />

                                        <button type="submit" class="btn btn-primary">Delete</button>

                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </section>
</div>

