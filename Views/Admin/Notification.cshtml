@{
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card m-b-20">
                            <div class="card-header" style=" background-color: #077bbf!important; color:#fff;">
                                <h3 class="card-title text-center" style=" background-color: #077bbf!important; color:#fff;">Send Event Notification</h3>
                            </div>
                            <div class="card-body" style="box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;">
                                <div>
                                    <form asp-action="Notification" asp-controller="admin" method="post">

                                        <div class="form-row">
                                            <div class="form-group col-md-6 offset-md-1 mx-auto">
                                                
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6 offset-md-1">
                                                    <div class="form-group style-postion2">
                                                        <label class="form-label">Userid</label>
                                                        <input name="Userid" type="text" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 offset-md-1">
                                                    <div class="form-group style-postion2">
                                                        <label class="form-label">Heading</label>
                                                        <input name="Heading" type="text" class="form-control">
                                                    </div>
                                                </div>

                                                <div class="form-group col-md-6 offset-md-1">
                                                    <div class="form-group style-postion4">
                                                        <label class="form-label">Content</label>
                                                        <textarea name="Content" rows="3" cols="20" class="form-control" placeholder="Content" required=""></textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 offset-md-1">
                                                    <div class="form-group style-postion3">
                                                        <label class="form-label">Date</label>
                                                        <input name="Date" id="ContentPlaceHolder1_txtdate" placeholder="Date" type="date">
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col-md-12 text-center">
                                                <button type="submit" class="btn btn-primary pl-5 pr-5">submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>