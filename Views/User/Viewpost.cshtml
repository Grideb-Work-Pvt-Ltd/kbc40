@{
    ViewData["Title"] = "AddPost";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}
@model forex.Models.Rootes;
<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../User/dashboard">Business Panel</a></li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container">
            <div class="col-lg-6">
                <a title="SHARE ON FACEBOOK" style="border-radius: 50%; background-color: white; margin-right: 15px; padding: 5px;" target="_blank" href="https://www.facebook.com/sharer.php?u=@Model.adpost"><i class="fab fa-facebook-f  fa-3x" style="color: #1877f2;"></i></a>
                <a title="SHARE ON TWITTER" style="border-radius: 50%; background-color: white; margin-right: 15px; padding: 5px;" target="_blank" href="https://twitter.com/intent/tweet?text=@Model.adpost"><i class="fab fa-twitter  fa-3x" style="color: #1da1f2;"></i></a>
                <a title="SHARE ON TWITTER" style="border-radius: 50%; background-color: white; margin-right: 15px; padding: 5px;" target="_blank" href="https://api.whatsapp.com/send/?phone&amp;text=@Model.adpost"><i class="fab fa-whatsapp  fa-3x" style="color: #62ef6f;"></i></a>
                <a title="SHARE ON TELEGRAM" style="border-radius: 50%; background-color: white; margin-right: 15px; padding: 5px;" target="_blank" href="https://telegram.me/share/url?url=@Model.adurl"><i class="fab fa-telegram  fa-3x" style="color: #25a5e4"></i></a>

            </div> 

                    <div class="form-group">
                        <label>Your Advertisement </label>

                        <textarea class="form-control" id="exampleFormControlTextarea3" style="font-size:large" rows="7">@Model.adpost</textarea>
                        <img src="@Model.adimage" />
                    </div>


                    <a href="@Model.url" class="btn btn-success" target="_blank">View</a>
               
            
        </div>

    </section>
</div>