@model forex.Models.user
@{
    ViewData["Title"] = "Plan";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Plan</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">User List</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Add
            </button>

            <!-- Add Plan Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="plan" asp-controller="admin" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add Plan</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label>Plan Name</label>
                                    <input type="text" name="name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Plan Amount</label>
                                    <input type="text" name="amount" class="form-control" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Update Plan Modal -->
            <div class="modal fade" id="exampleModals" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="planupdate" asp-controller="admin" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Update Plan</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label>Plan Name</label>
                                    <input type="text" name="name" class="form-control" />
                                    <input type="text" name="indexid" class="form-control" hidden/>
                                </div>
                                <div class="form-group">
                                    <label>Plan Amount</label>
                                    <input type="text" name="amount" class="form-control" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Plan List -->
            <div class="row">
                <div class="col-lg-12 mt-3">
                    <div class="table-responsive table-rounds">
                        <table id="mytablees" class="table table-hover table-striped table-border-whole table-bordered table-responsive-sm" style="font-size:14px;">
                            <thead class="table-light-head">
                                <tr class="table-border">
                                    <th scope="col" class="table-border">S.no</th>
                                    <th scope="col" class="table-border">Plan Name</th>
                                    <th scope="col" class="table-border">Plan Amount</th>
                                    <th scope="col" class="table-border">Action</th>
                                </tr>
                            </thead>
                            <tbody class="table-details">
                                @if (Model != null)
                                {
                                    int i = 0;
                                    foreach (var item in Model.reglist)
                                    {
                                        i++;
                                        <tr>
                                            <td scope="row">@i</td>
                                            <td>@item.name</td>
                                            <td>@item.userid</td>
                                            <td>
                                                <div class="row">
                                                    <div class="mr-3 mb-3">
                                                        <button class="btn btn-primary" type="button" onclick="showUpdateModal('@item.indexid', '@item.name', '@item.userid')" data-toggle="modal" data-target="#exampleModals">edit</button>
                                                    </div>
                                                    <div>
                                                        <form asp-action="plandelete" asp-controller="admin">
                                                            <input name="name" value="@item.indexid" hidden>
                                                            <button class="btn btn-primary" type="submit">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Add jQuery and Bootstrap JavaScript -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<script>
    function showUpdateModal(indexid, name, amount) {
        var modal = document.getElementById('exampleModals');
        modal.querySelector('input[name="indexid"]').value = indexid;
        modal.querySelector('input[name="name"]').value = name;
        modal.querySelector('input[name="amount"]').value = amount;
    }
</script>
