@{
    ViewData["Title"] = "Donetionslip";
    Layout = "~/views/Shared/_Layoutuser.cshtml";
}
@model forex.Models.IncomeWallet;
@using Microsoft.AspNetCore.Http;

<style>
    .card {
        background-color: white !important;
    }
</style>
<div class="content-wrapper" style="min-height: 333px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../User/dashboard">Business Panel</a></li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <button class="btn btn-primary float-right mt-2" onclick="window.print()">Print</button>
       
            <div class="container">
                <div class="card">
                    <div class="card-header bg-primary text-white border-0">
                        <center><strong>Needan Welfare Foundation®</strong></center>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-12 ">
                                <div>
                                    <img src="~/asset/img/logo.png" style="margin-right:100px;width:100px;" />
                                </div>

                            </div>


                        </div>
                        <div class="row mb-4">

                            <div class="col-sm-6">
                                <h6 class="mb-3"></h6>
                                <div>
                                    <strong>Volunteer Name:- @Context.Session.GetString("name")</strong>
                                </div>


                                <div>Phone: +91 @Context.Session.GetString("mobile")</div>
                            </div>

                            <div class="col-sm-6">
                                <h6 class="mb-3">To:</h6>
                                <div>
                                    <strong>Needan Welfare Foundation®</strong>
                                </div>
                                <div>
                                    80 G Certificate Number:-AAFCN8710LF20221
                                </div>
                                
                                <div>
                                    Room No. 303, Flat No. 106, Shri Sai Complex Rattan Park,

                                </div>
                                <div>
                                    Railway Station Road NA Nangloi
                                    New Delhi DL 110041
                                </div>
                                <div>Email: Needanfoundation@gmail.com</div>
                                <div>Phone: +91 1161197331</div>
                            </div>
                        </div>
                        <div class="table-responsive-sm">
                            <table class="table table-striped">
                                <thead class="bg-blue-200 text-white">
                                    <tr>
                                        <th class="center">#</th>
                                        <th>Recipt No</th>
                                        <th>Donation Date</th>
                                        <th class="right">Amount</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var item in Model.Incomewall)
                                    {
                                        i++;
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.Index</td>
                                        <td>@item.Date</td>
                                        <td class="center"><i class="fas fa-rupee-sign"></i>@item.amount</td>
                                        
                                    </tr>
                                    }


                                    
                                    <tr>
                                        <td colspan="2"></td>
                                        <td class="right"><strong>Total</strong></td>
                                       
                                        <td class="right text-danger"><i class="fas fa-rupee-sign"></i>@Model.tamount</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row" style=" justify-content: end; margin-right: 65px;">
                            <div class="col-lg-6 col-sm-6">
                                <table class="table table-clear">
                                    <tbody>
                                        <tr>
                                            <td class="left">
                                                <strong>Subtotal</strong>
                                                
                                            </td>
                                            <td class="l" ><i class="fas fa-rupee-sign"></i>@Model.tamount</td>
                                        </tr>
                                        <tr>
                                            <td class="left">
                                                <strong>Discount </strong>
                                            </td>
                                            <td class="left"><i class="fas fa-rupee-sign"></i>00.00</td>
                                        </tr>
                                       
                                        <tr>
                                            <td class="left">
                                                <strong>Total Donation Amount </strong>
                                            </td>
                                            <td class="text-success">
                                                <strong><i class="fas fa-rupee-sign"></i>@Model.tamount</strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>
                        <div class="table-responsive-sm">
                            <table class="table table-striped">
                                <thead class="text-white" style="background-color:#8484c7">
                                    <tr>

                                        <th class="text-center">Thank You For Your Donation</th>

                                    </tr>
                                </thead>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
       
    </section>
</div>
       

